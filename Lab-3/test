#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/stat.h>

int main(int argc, char* argv[]){
    if(argc > 3){
        puts("Too many parameters given!");
        exit(1);
    }

    int inFile, outFile, asc;
    char buf;

    inFile = open(argv[1], O_RDONLY);
    outFile = open(argv[2], O_RDWR | O_CREAT | O_EXCL, 0666);

    if(inFile && outFile){
        while((asc = read(inFile, &buf, 1)) > 0){
            if(buf != ' '){
                printf("%d", asc);
            }else if(buf == ' '){
                printf("%d ", (int)buf);
            }else if((int)buf == 10){
                printf("\n");
            }
        }
    }else{
        puts("Error opening in/out file");
        exit(1);
    }

    close(inFile);
    close(outFile);
    exit(0);
}
